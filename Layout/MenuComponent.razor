<div class="nav-item px-3">
    <a class="nav-link"  @onclick="ToggleCollapse">
        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @MenuTitle
    </a>
    <ul class="nav flex-column @(IsCollapsed ? "collapse" : null)">
        @foreach (var menuItem in SubMenuItems!)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@menuItem.Url">
                    <i class="fas fa-file"></i> @menuItem.Title
                </NavLink>
            </li>
        }
    </ul>
</div>

@code {
    [Parameter]
    public string? MenuTitle { get; set; }

    [Parameter]
    public List<MenuItem>? SubMenuItems { get; set; }

    private bool IsCollapsed { get; set; }

    private void ToggleCollapse()
    {
        IsCollapsed = !IsCollapsed;
    }
}